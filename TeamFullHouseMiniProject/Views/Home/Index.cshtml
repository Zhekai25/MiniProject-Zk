@{
    ViewData["Title"] = "Home Page";
}

<div class="h-100"
     ng-controller="MyCtrl as myCtrl" 
     ng-style="myCtrl.bgColor">
    <div class="container">
        <form name="myForm">
            <div class="row">
                <div class="col-lg-12 my-3">
                    <h1>Hello {{ myCtrl.name ? myCtrl.name : 'Guest' }}!</h1>
                    <h2 class="mb-4"
                        ng-show="myCtrl.birthDate">
                        You were born on {{ myCtrl.birthDate | date:"dd-MM-yyyy" }}
                    </h2>
                    <h4>Select your favourite colour</h4>
                </div>
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="form-group mb-5">
                                <label for="pageColor">Page Color</label>
                                <input type="color"
                                       class="form-control"
                                       ng-model="myCtrl.color"
                                       ng-change="myCtrl.setBgColor()">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group mb-2">
                                <label for="name">Name</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="myCtrl.name">
                            </div>
                            <div class="form-group">
                                <label for="birthdate">Birth Date</label>
                                <input type="date"
                                       class="form-control"
                                       max="{{ myCtrl.maxDate }}"
                                       ng-model="myCtrl.birthDate">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


